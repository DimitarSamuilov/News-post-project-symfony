{% extends("base.html.twig") %}

{% block main %}
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Summary</th>
            <th>Date</th>
        </tr>
        </thead>
        <tbody>
        {% for single in news  %}
            <tr>
                <td>{{ single.id }}</td>
                <td>{{ single.title }}</td>
                <td>{{ single.summary }}</td>
                <td>{{ single.formattedDate }}</td>
                <td><a href="{{ path('admin_news_edit',{id:single.id}) }}" class="btn btn-primary btn-xs">Edit</a></td>
                <td><a href="{{ path('admin_news_delete',{id:single.id}) }}" class="btn btn-primary btn-xs">Delete</a></td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}